<!-- Error display template that shows the error message and stack trace inside a Bootstrap alert. -->
<% layout('/layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3 mt-3">
            <div class="alert alert-danger text-wrap" role="alert" style="word-wrap: break-word;">
                <h4 class="alert-heading">
                    <%= err.message %>
                </h4>
                <p style="white-space: pre-wrap;">
                    <%= err.stack %>
                </p>
                <hr>
            </div>
        </div>
    </div>
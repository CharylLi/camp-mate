<%# EJS view for displaying campgrounds list with banner, sorting, search form, and camp cards %>

    <% layout('layouts/boilerplate') %>

        <!-- Banner Image and Title -->
        <div class="position-relative" style="width: 100%; margin: 0; padding: 0;">
            <img src="https://res.cloudinary.com/dpo1w1vop/image/upload/v1728246454/cg_background_cavxav.jpg"
                alt="Campgrounds Banner"
                style="width: 100%; height: 500px; object-fit: cover; filter: brightness(0.8);">
            <h1 class="position-absolute top-50 start-50 translate-middle text-white"
                style="font-size: 3rem; font-weight: bold;">Campgrounds</h1>
        </div>

        <div class="container d-flex justify-content-between align-items-center my-4">

            <!-- Sorting Dropdown Menu -->
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown"
                    aria-expanded="false"
                    style="background-color: #31447c; border-color: #31447c; color: white; font-family: 'PT Sans', sans-serif;">
                    Sort By
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/campgrounds?sort=alphabetic">Alphabetic</a></li>
                    <li><a class="dropdown-item" href="/campgrounds?sort=most-reviews">Most Reviews</a></li>
                    <li><a class="dropdown-item" href="/campgrounds?sort=highest-rating">Highest Rating</a></li>
                    <li><a class="dropdown-item" href="/campgrounds?sort=price-low-to-high">Price: Low to High</a></li>
                    <li><a class="dropdown-item" href="/campgrounds?sort=price-high-to-low">Price: High to Low</a></li>
                </ul>
            </div>

            <!-- Search form to find campgrounds by name or location -->
            <form class="d-flex justify-content-end" action="/campgrounds" method="GET"
                style="flex-grow: 1; max-width: 600px;">
                <input class="form-control me-2" type="search" name="search" placeholder="Search by name or location"
                    value="<%= search || '' %>"
                    style="flex-grow: 1; min-width: 250px; font-family: 'PT Sans', sans-serif;">
                <button class="btn btn-search" type="submit" style="font-family: 'PT Sans', sans-serif;">Search</button>
            </form>
        </div>

        <!-- Campground card layout with image, title, location, description, and 'View' button -->
        <div class="container d-flex flex-column justify-content-center align-items-center mt-3 mb-5">
            <% if (campgrounds.length> 0) { %>
                <div class="container">
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% for (let campground of campgrounds) { %>
                            <div class="col">
                                <div class="card h-100">
                                    <% if (campground.images.length) { %>
                                        <img class="card-img-top img-fluid" alt="Campground Image"
                                            src="<%= campground.images[0].url %>"
                                            style="height: 200px; object-fit: cover;">
                                        <% } else { %>
                                            <img class="card-img-top img-fluid" alt="No Image Available"
                                                src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png"
                                                style="height: 200px; object-fit: cover;">
                                            <% } %>
                                                <div class="card-body d-flex flex-column">
                                                    <h5 class="card-title">
                                                        <%= campground.title %>
                                                    </h5>
                                                    <p class="card-text text-muted mb-1">
                                                        <%= campground.location %>
                                                    </p>
                                                    <p class="card-text"
                                                        style="overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                                        <small>
                                                            <%= campground.description %>
                                                        </small>
                                                    </p>

                                                    <a class="btn btn-primary mt-auto"
                                                        href="/campgrounds/<%= campground._id %>">View <%=
                                                            campground.title %></a>
                                                </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
                <% } else { %>
                    <!-- Message when no campgrounds match the search or sorting criteria -->
                    <div class="col-12 text-center mt-3 mb-3">
                        <p class="text-muted">No campgrounds match your search. Try different keywords or sort options.
                        </p>
                    </div>
                    <% } %>
        </div>
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            // 获取所有的 alert 元素
                            var alerts = document.querySelectorAll('.alert');

                            // 遍历每个 alert，并设置2秒后自动淡出
                            alerts.forEach(function (alert) {
                                setTimeout(function () {
                                    alert.classList.add('fade-out'); // 添加淡出效果
                                }, 2000); // 2秒后开始淡出

                                // 在淡出动画结束后彻底移除 alert 元素
                                setTimeout(function () {
                                    alert.style.display = 'none';
                                }, 3000); // 在淡出动画结束后移除元素
                            });
                        });
                    </script>
